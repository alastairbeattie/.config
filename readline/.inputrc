
set editing-mode vi
set show-mode-in-prompt on
set vi-ins-mode-string "\1\033[01;35m\e[6 q\2+ \e[2m"
set vi-cmd-mode-string "\1\033[02;33m\e[2 q\2> "

# optionally:
# switch to block cursor before executing a command
set keymap vi-insert
RETURN: "\e\n"
"\C-k": kill-line
"\C-k\C-k": kill-whole-line 
"\C-a": beginning-of-line
"\C-e": end-of-line
